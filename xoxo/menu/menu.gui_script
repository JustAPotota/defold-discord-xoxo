local monarch = require "monarch.monarch"
local gooey = require "gooey.gooey"
local xoxo = require "xoxo.xoxo"


function init(self)
	gui.set_render_order(15)

	local play_button = gui.get_node("play/bg")
	gui.set_enabled(play_button, false)
	xoxo.join_match(function()
		msg.post(".", "acquire_input_focus")
		gui.set_enabled(play_button, true)
	end)
end


function on_input(self, action_id, action)
	gooey.button("play/bg", action_id, action, function()
		monarch.show(hash("game"))
	end)
end
